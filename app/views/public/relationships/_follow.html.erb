 <% if posters.exists? %>
  <% posters.each do |poster| %>
  <div class="border-bottom">
   <table class="text-center">
    <tr>
    <th class="col-2">
    <%= link_to poster_path(poster.id),class:"text-dark text-decoration-none" do %>
       <%= image_tag poster.get_image(100,100),:size => '80x80',class:"rounded-circle mr-2 my-2 " %>
       </th>
       <th class="">
        <div class="">
       <%= poster.user_name %>
        </div>
       </th>
       <th class="col-6">
          <% if current_poster != poster %>
            <% if current_poster.following?(poster) %>
             <%= link_to "フォロー解除", poster_relationships_path(poster.id), method: :delete,class:"btn btn-outline-info ml-5" %>
            <% else %>
             <%= link_to "フォローする", poster_relationships_path(poster.id), method: :post,class:"btn btn-outline-info ml-5" %>
             
            <% end %>
          <% end %>
          </th>
       <% end %>
       </tr>
       </table>
          </div>
   <% end %>
   <% else %>
     <p>ユーザーはいません</p>
  <% end %>