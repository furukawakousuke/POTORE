<div class="container">
  <div class="row">
    <div class="col-11">
     <% visitor = notification.visitor %>
<% poster = Poster.find_by(id: notification.visitor_id) %>

<div class="poster-view clearfix ">
  <%= link_to poster_path(notification.visitor) do %>
    <%= image_tag poster.get_image(100,100),:size => '80x80',class:"rounded-circle mr-2 mt-2 " %>
  <% end %>
  <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
  <br>
  <% if !@comment.nil? %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
  <% end %>
</div>
    </div>
  </div>
</div>