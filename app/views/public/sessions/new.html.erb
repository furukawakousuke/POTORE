<h2 class="mb-5"></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="text-center">
    <%= f.text_field :user_name,placeholder: "ユーザネーム",:size=>"40",class:"mb-3 mt-5"  %>
  </div>
  <div class="text-center">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス",:size=>"40",class:"mb-3"  %>
  </div>

  <div class="text-center">
    <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード(６文字)",:size=>"40",class:"mb-3"  %>
  </div>



  <div class="text-center">
     <%= f.submit "Log in",class:"btn btn-outline-dark" %>
  </div>
<% end %>

