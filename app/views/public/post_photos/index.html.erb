<div class="container">
  <div class="row">
    <div class="col-lg-7 col-sm-8">
      <h4 class="mt-3 lead">Post a Photo</h4>
    </div>
      <div class="col-lg-5 col-md-8">
        <%= form_with url: search_post_photos_path, method: :get, local: true do |f| %>
         <%= f.text_field :search, class: 'mt-3 mb-5', placeholder: "キーワード検索",:size=>"30"  %>
         <%= f.button :type => "submit" do %>
         <i class="fas fa-search"></i>
         <% end %>
        <% end %>
      </div>
      <% @post_photos.each_slice(3) do |slice| %>
       <div class="row">
        <% slice.reverse.each do |post_photo| %>
          <div class="col-md-5 col-sm-8 mt-2 ml-5">
            <%= link_to post_photo_path(post_photo.id) do %>
            <%= image_tag post_photo.get_image(100,100),:size => '300x200',class:"mt-2" %>
            <% end %><br>
          </div>
          <div class="col-md-5 col-sm-8 mt-4 ml-5">
            <div class=""><%= post_photo.address %></div><br class="mb-4">
            <%= post_photo.introduction %>
          </div>
           <br>
          <div class=" col-10 border-bottom ml-5 my-2"></div>
        <% end %>
       </div>
      <% end %>
    </div>
</div>