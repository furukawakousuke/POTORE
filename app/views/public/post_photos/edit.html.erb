<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-2 col-1"></div>
    <div class="col-6 mt-5">
      <% if "425px" %>
       <%= image_tag @post_photo.get_image(10,10),:size=>'300x200',class:"ml-4" %>
      <% end %>
      <%= form_with model: @post_photo,url: post_photo_path(@post_photo.id),method: :patch do |f| %>
       <%= f.label :introduction,"Caption",class:"lead mt-2" %><br>
       <%= f.text_area :introduction,size: '40x5' %><br>
       <%= f.label :address,"Spot",class:"lead" %><br>
       <%= f.hidden_field :address,size: '40x5',id: :spot %><br>
       <%= f.hidden_field :latitude, id: 'lat' %>
       <%= f.hidden_field :longitude, id: 'lng' %>
       <%= render'map' %>
       <div class="text-center">
        <%= f.submit "Edit",class:"btn btn-outline-dark btn-sm px-3 mt-3" %>
       </div>
      <% end %>
    </div>
  </div>
</div>