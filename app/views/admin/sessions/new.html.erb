
<h2 class="lead ml-5 mt-3">Admin/Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="text-center mt-5">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email",:size=>"40",class:"mb-3 mt-5" %>
  </div>

  <div class="text-center">
    <%= f.password_field :password, autocomplete: "current-password",placeholder: "passward",:size=>"40",class:"mb-5 mt-3" %>
  </div>

  <!--<% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>-->

  <div class="text-center">
    <%= f.submit "Log in",class:"btn btn-outline-dark btn-sm px-3" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

 </div>
</div>