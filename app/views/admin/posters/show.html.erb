<div class="container">
  <div class="row">
    <div class="col-lg-5 col-md-3  col-sm- ml-3">
      <div class="ml-3 h3">
      <%= image_tag @poster. get_image(10,10),:size => '120x120',class:"mt-3 mr-5 mb-4 rounded-circle" %>
       <%= @poster.user_name %>
      </div>
    </div>
      <div class="col-lg-6 col-md-7 mt-5">
        <table>
          <thead>
          <th class="text-center border-right h3">
          <%= @poster.followers.count %><br>
          <p class="h6 px-4 text-secondary">フォロー中</p></th>
          <th class="text-center border-right h3">
          <%= @poster.followings.count %>
          <p class="h6 px-4 text-secondary">フォロワー</p></th>
          <th class="text-center h3">
          <%= @poster.favorites.count %>
          <p class="h6 px-2 text-secondary">いいね数</p></th>
          </thead>
        </table>
      </div>
    </div>
   </div>
      <div class="row">
        <div class="col-12 ml-5">
         <span class="h4 mt-0">
         <%= @poster.name %>
         </span><br>

         <div class="mt-3">
         <%= @poster.introduction %>
         <br>
         </div>
      <% @poster.post_photos.each do |post_photo| %>
      <%= link_to admin_post_photo_path(post_photo.id) do %>
      <%= image_tag post_photo.get_image(100,100),:size => '220x140',class:"mt-4" %><% end %>
      <% end %>
        </div>
      </div>
</div>