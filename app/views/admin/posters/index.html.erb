<div class="container">
  <div class="row">
    <div class="col-6">
    <h3 class="lead mt-3 ml-2">User List</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mt-2">
      <table class="mx-auto w-100 table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th class="ml-3">ユーザーネーム</th>
            <th>Eメール</th>
            <th>投稿数</th>
            <th>作成日時</th>
          </tr>
        </thead>
        <tbody class="text-dark">
          <% @posters.each do |poster| %>
          <tr>
            <td class="pl-3">
            <%= link_to admin_poster_path(poster.id),class:"btn btn-outline-dark" do %>
            <%= poster.id %></td>
             <% end %>
            <td>
            <%= link_to admin_poster_path(poster.id),class:"btn btn-light" do %>
             <%= poster.user_name %>
             <% end %></td>
            <td>
            <%= link_to admin_poster_path(poster.id),class:"btn btn-light" do %>
            <%= poster.email %>
            <% end %></td>
            <td class=""><%= poster.post_photos.count %></td>
            <td><%= poster.created_at.strftime('%Y/%m/%d') %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= paginate @posters %>
    </div>
  </div>
</div>
