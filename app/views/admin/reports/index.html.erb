<div class="container">
  <div class="row">
    <div class="col-6 mt-3">
      <p class="lead">Reports</p>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>通報したUser</th>
            <th>通報されたUser</th>
            <th>投稿番号</th>
            <th>更新日時</th>
          </tr>
        </thead>
        <% @reports.reverse.each do |report| %>
        <tbody>
          <tr>
            <td><%= link_to admin_report_path(report.id),class:"btn btn-outline-secondary btn-sm" do %>
            <%= report.id %> <% end %></td>
            <td><%= link_to admin_poster_path(report.reporter),class:"btn btn-light btn-sm" do %>
            <%= report.reporter.user_name %><% end %></td>
            <td><%= link_to admin_poster_path(report.reported),class:"btn btn-light btn-sm" do %>
            <%= report.reported.user_name %><% end %></td>
            <td><%= link_to admin_post_photo_path(report.post_photo),class:"btn btn-outline-dark btn-sm" do %>
            <%= report.post_photo.id %><% end %></td>
            <td><%= report.updated_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @reports %>
    </div>
  </div>
</div>